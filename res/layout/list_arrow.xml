<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_arrow_img"
            android:layout_width="@dimen/width_listImg"
            android:layout_height="@dimen/height_listImg"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/list_arrow_name"
            android:layout_width="@dimen/width_listText"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/textsize_listText" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_arrow_arrow"
        android:layout_width="@dimen/width_listArrow"
        android:layout_height="@dimen/height_listArrow"
        android:scaleType="fitCenter" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow"/>

</RelativeLayout>